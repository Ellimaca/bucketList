<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <link rel="stylesheet" href="{{ asset('css/main.css')}}">
    <link rel="shortcut icon" type="image/jpg" href="{{ asset('images/bucketlistimage.jpg') }}"/>
    <link rel="preconnect" href="https://fonts.gstatic.com">

    <title>{% block title %} Accueil {% endblock %}</title>
</head>

<div class="container content">
    <header>
        <nav class="navbar mb-5 mt-5" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="{{ path('main_home') }}">
                    <img src="{{ asset('images/bucketlistimage.jpg') }}" class="mr-2">
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="{{ path('main_home') }}">
                        Home
                    </a>

                    <a class="navbar-item" href="{{ path('main_contact') }}">
                        About us
                    </a>

                    <a class="navbar-item" href="{{ path('wish_list') }}">
                        Wishes
                    </a>

                    <a class="navbar-item" href="{{ path('wish_your_wish') }}">
                        Add a wish
                    </a>

                </div>
            </div>
        </nav>
    </header>
</div>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

    <body>
    <section class="hero is-medium hero-bg-custom is-primary mb-6">
        <div class="hero-body">
            <h1>Made up your bucket list !</h1>
        </div>
    </section>

    <div class="container">
        {% block body %} {% endblock %}
    </div>
    </body>

<div class="container">
    <div class="footer">
        <div class="row align-items-center">
        <div class="col">
            &copy; {{ "now"|date("Y")}} Bucket List
        </div>

        <div class="col">
            <a href="{{ path('main_contact') }}">Contact us</a>
        </div>

        <div class="col">
            <p>TEST BLABLA</p>
        </div>
    </div>
    </div>
</div>

</html>